{
  "name": "@do-ob/vite-lib-config",
  "version": "1.0.0",
  "description": "Base Vite configuration for building a modern ESM & TypeScript NodeJS library",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./types/index.d.ts"
    }
  },
  "files": [
    "dist",
    "types"
  ],
  "keywords": [
    "vite",
    "typescript",
    "library",
    "config",
    "configuration",
    "esm"
  ],
  "author": "Eric Crowell <eric@do-ob.io> (https://do-ob.io)",
  "license": "MIT",
  "scripts": {
    "build": "pnpm run build:dist && pnpm run build:types",
    "build:dist": "vite build --mode production",
    "build:types": "tsc -p tsconfig.json"
  },
  "dependencies": {
    "vite-tsconfig-paths": "^4"
  },
  "peerDependencies": {
    "vite": "^5"
  }
}